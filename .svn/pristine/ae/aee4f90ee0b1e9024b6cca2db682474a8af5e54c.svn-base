public class OpenModule extends BrowserLauncher {

	//================ Listen =========================//
	public void openListenHome(){

		UIMenu uiMenu = new UIMenu(driver);
		
		SimplifyUtils.waitTillElementFound(uiMenu.listen, 60);

		uiMenu.listen.click();
		
		uiMenu.listenHome.click();

	}

